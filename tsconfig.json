{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "baseUrl": "docs",
    "types": ["vitepress", "vue"],
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": [
    "docs/global.d.ts",
    "types/*.d.ts",
    "node_modules/@types",
    "docs/.vitepress/**/*.ts",
    "docs/components/**/*.vue"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
